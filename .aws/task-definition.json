{
    "family": "solana-whale-bot",
    "networkMode": "awsvpc",
    "taskRoleArn": "arn:aws:iam::211125441010:role/solana-whale-task-role",
    "executionRoleArn": "arn:aws:iam::211125441010:role/solana-whale-task-execution-role",
    "containerDefinitions": [
        {
            "name": "solana-whale-bot",
            "image": "Y211125441010.dkr.ecr.eu-north-1.amazonaws.com/solana-whale-bot",
            "cpu": 512,
            "memory": 1024,
            "essential": true,
            "environment": [
                {
                    "name": "RUST_LOG",
                    "value": "info,solana_whale_trader=debug"
                },
                {
                    "name": "ENVIRONMENT",
                    "value": "production"
                },
                {
                    "name": "RPC_ENDPOINT",
                    "value": "https://api.mainnet-beta.solana.com"
                }
            ],
            "secrets": [
                {
                    "name": "WALLET_KEYPAIR_PATH",
                    "valueFrom": "arn:aws:secretsmanager:eu-north-1:211125441010:secret:solana-wallet-keypair"
                }
            ],
            "logConfiguration": {
                "logDriver": "awslogs",
                "options": {
                    "awslogs-group": "/ecs/solana-whale-bot",
                    "awslogs-region": "eu-north-1",
                    "awslogs-stream-prefix": "ecs"
                }
            },
            "healthCheck": {
                "command": [
                    "CMD-SHELL",
                    "pgrep -f solana_whale_trader || exit 1"
                ],
                "interval": 30,
                "timeout": 5,
                "retries": 3,
                "startPeriod": 60
            }
        }
    ],
    "requiresCompatibilities": [
        "FARGATE"
    ],
    "cpu": "512",
    "memory": "1024"
}